{
    "name": "vokus",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "example": "ts-node ./packages/example/index.ts",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
        "publish": "npm run setup && npm run update-packages && npm run lint && npm run test && npm run tsc && lerna publish && npm run setup",
        "setup": "npm install && npm run bootstrap && ts-node ./packages/dev/bin/clean && npm run bootstrap",
        "shields": "ts-node ./packages/shields",
        "test": "jest --config jest-config.js --detectOpenHandles",
        "tsc": "tsc",
        "update-packages": "ts-node ./packages/dev/bin/update-packages && sort-package-json 'package.json' 'packages/*/package.json'"
    },
    "dependencies": {
        "@types/jest": "26.0.0",
        "@types/node": "14.0.13",
        "@types/prettier": "2.0.1",
        "@typescript-eslint/eslint-plugin": "3.2.0",
        "@typescript-eslint/parser": "3.2.0",
        "eslint": "7.2.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-prettier": "3.1.3",
        "jest": "26.0.1",
        "lerna": "3.22.1",
        "prettier": "2.0.5",
        "sort-package-json": "1.44.0",
        "ts-jest": "26.1.0",
        "ts-node": "8.10.2",
        "typescript": "3.9.5"
    },
    "engines": {
        "node": ">= 14.4"
    }
}
