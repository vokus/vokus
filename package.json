{
    "name": "vokus",
    "private": true,
    "scripts": {
        "badges": "ts-node ./packages/dev/bin/badge",
        "bootstrap": "lerna bootstrap",
        "publish": "npm run clean && npm run update-packages && npm run tslint && npm run test && npm run tsc && lerna publish",
        "test": "npm run bootstrap && jest --config jest-config.js --detectOpenHandles",
        "tsc": "tsc",
        "tslint": "tslint --config tslint.json --project ./",
        "update-packages": "ts-node ./packages/dev/bin/update-packages && sort-package-json 'package.json' 'packages/*/package.json'"
    },
    "husky": {
        "hooks": {}
    },
    "dependencies": {
        "@types/express": "4.17.2",
        "@types/jest": "25.1.3",
        "@types/node": "13.7.7",
        "@types/prettier": "1.19.0",
        "husky": "4.2.3",
        "jest": "25.1.0",
        "lerna": "3.20.2",
        "prettier": "1.19.1",
        "sort-package-json": "1.40.0",
        "ts-jest": "25.2.1",
        "ts-node": "8.6.2",
        "tslint": "6.0.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-plugin-prettier": "2.1.0",
        "typescript": "3.8.3"
    },
    "engines": {
        "node": ">= 13.8"
    }
}
