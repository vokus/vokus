{
    "name": "vokus",
    "private": true,
    "scripts": {
        "build": "tsc --project tsconfig.build.json",
        "clean": "ts-node ./bin/clean",
        "eslint": "eslint . --ignore-path .gitignore --ext .ts",
        "lint": "npm run eslint && npm run prettier",
        "prepare": "husky install",
        "prettier": "prettier --ignore-path .gitignore --check \"**/*.{json,md,yml,yaml}\"",
        "publish": "npm run setup && npm run update && npm run lint && npm run test && npm run build && lerna version --conventional-commits && lerna publish from-package && npm run setup",
        "setup": "npm install && npm run clean && lerna bootstrap",
        "test": "jest",
        "update": "ts-node ./bin/update && sort-package-json 'package.json' 'packages/*/package.json'"
    },
    "dependencies": {
        "@commitlint/cli": "16.2.1",
        "@commitlint/config-conventional": "16.2.1",
        "@types/jest": "27.4.0",
        "@types/node": "17.0.18",
        "@typescript-eslint/eslint-plugin": "5.12.0",
        "@typescript-eslint/parser": "5.12.0",
        "eslint": "8.9.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-unused-imports": "2.0.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "lerna": "4.0.0",
        "npm-check-updates": "12.3.1",
        "prettier": "2.5.1",
        "sort-package-json": "1.54.0",
        "ts-jest": "27.1.3",
        "ts-node": "10.5.0",
        "typescript": "4.5.5"
    },
    "engines": {
        "node": ">= 14",
        "npm": ">= 6"
    }
}
