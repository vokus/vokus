{
    "compilerOptions": {
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true
    },
    "include": [
        "packages/component/**/*",
        "packages/dev/**/*",
        "packages/file-system/**/*",
        "packages/logger/**/*",
        "packages/string/**/*"
    ],
    "exclude": ["node_modules", "**/*.test.ts"]
}
